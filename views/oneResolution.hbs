<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>One Resolution</title>
    <link rel="stylesheet" href="/main.css">
  </head>
  <body>
    <header>
      <a href="/" class="header">
        <h1>New Years Resolutions</h1>
      </a>
    </header>
    <main>
      <section>
            <h1>Resolution: </h1>
          {{#each resolution}}
            <h3>{{resolution}}</h3>
            <form method="post" action="/oneResolution/{{id}}?_method=PUT">
              <input type="text" name="resolution" placeholder="{{resolution}}" required>
              <button>Update Resolution</button>
            </form>
            <form action="/oneResolution/{{id}}?_method=DELETE" method="post">
              <button id="danger">Delete Resolution</button>
            </form>
          {{/each}}
        </section>
    </main>

  </body>
</html>
