<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>One Person</title>
    <link rel="stylesheet" href="/main.css">
  </head>
  <body>
    <header>
      <a href="/" class="header">
        <h1>New Years Resolutions</h1>
      </a>
    </header>
    <main>
      <section>
            <h1>Hopeful Person: </h1>
          {{#each person}}
            <h3>{{person}}</h3>
            <h1>This Person's Resolutions:</h1>
            <h3>{{resolution}}</h3>
            <form action="/onePerson/{{id}}" method="post">
              <h3>Add Resolution:</h3>
              <input type="text" name="resolution" value="" placeholder="New Resolution" required>
              <button>Add Resolution</button>
            </form>

            <form action="/onePerson/{{id}}?_method=DELETE" method="post">
              <button id="danger">Delete Person</button>
            </form>
          {{/each}}
        </section>
    </main>

  </body>
</html>
